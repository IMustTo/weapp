<!--index.wxml-->
<import src="../../templates/GridBtn.wxml"/>
<import src="../../templates/ModuleTitle.wxml"/>

<view class="container">
  <swiper indicator-dots="false"
    autoplay="true"
    interval="5000"
    duration="1000">
    <block wx:for="{{ imgUrls }}" wx:key="*this">
      <swiper-item>
        <image src="{{ item }}" class="slide-image" mode="aspectFill"/>
      </swiper-item>
    </block>
  </swiper>

  <template is="module-title" data="{{ title: '常用应用' }}"></template>
  <view class="grid-btns">

    <template is="grid-btn"
      class="grid-btn"
      wx:for="{{ btns }}"
      wx:key="page"
      data="{{ ...item }}">
    </template>

  </view>
</view>
